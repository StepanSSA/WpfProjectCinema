<Window
    x:Class="WpfProjectCinema.Views.PurchaseConfirmation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfProjectCinema.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PurchaseConfirmation"
    Width="300"
    Height="250"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel
            x:Name="InfoPanel"
            Grid.Row="0"
            HorizontalAlignment="Center">
            <TextBlock Text="Подтвердить покупку:" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Width="50"
                Height="25"
                HorizontalAlignment="Center"
                Click="Button_Yes"
                Content="Да" />
            <Button
                Grid.Column="1"
                Width="50"
                Height="25"
                HorizontalAlignment="Center"
                Click="Button_No"
                Content="Нет" />
        </Grid>
    </Grid>
</Window>
